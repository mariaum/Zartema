+
+    // Zartema start
+    public void sendPacketDelayed( Object packet ) {
+        this.con.getCh().write( packet, false );
+        if ( ++this.pendingFlush >= 8192 ) {
+            this.con.getCh().flush();
+            this.pendingFlush = 0;
+        }
+    }
+
+    @Override
+    public void readComplete( final ChannelWrapper channel ) throws Exception {
+        this.con.getCh().flush();
+        this.pendingFlush = 0;
+    }
+    // Zartema end
 }
